{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "baseUrl": ".",
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": false,
      "incremental": true,
      "isolatedModules": true,
      "lib": ["ESNext"],
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "./lib",
      "paths": {},
      "preserveConstEnums": true,
      "removeComments": false,
      "rootDir": "./src",
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "target": "ES2022"
    },
    "include": ["./src/**/*.ts"]
  }
  